<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.BluetoothPairActivity">

    <include
        android:id="@+id/network_devices_banner"
        layout="@layout/app_banner" />

    <TextView
        android:id="@+id/network_devices_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginMassive"
        android:text="@string/network_devices_header"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/headingSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/network_devices_banner" />

    <ScrollView
        android:id="@+id/network_devices_scroll"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="@dimen/marginMedium"
        android:layout_marginTop="@dimen/marginMedium"
        android:layout_marginRight="@dimen/marginMedium"
        android:background="@drawable/rounded_primary_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/network_devices_header">

        <LinearLayout
            android:id="@+id/network_devices_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>